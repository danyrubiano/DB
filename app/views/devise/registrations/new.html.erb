<div style="width:90%; margin:0 auto;">

</br></br>

<h2>Registrarse</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.text_field :name_user, autofocus: true, placeholder: "Nombre de Usuario", class:"form-control5" %>
  </div>
  
  <div class="field">
    <%= f.text_field :name, autofocus: true, placeholder: "Nombres", class:"form-control5" %>
  </div>

  <div class="field">
    <%= f.text_field :last_name, autofocus: true, placeholder: "Apellidos", class:"form-control5" %>
  </div>

  <div class="field">
    <%= f.label :fecha_nacimiento, "Fecha de Nacimiento", class:"gris" %><br>
    <%= f.date_field :fecha_nacimiento, autofocus: true, placeholder: "Fecha de Nacimiento", class:"form-control5" %>
  </div>


  <div class="field">
    <%= f.email_field :email, autofocus: true, placeholder: "Email", class:"form-control5" %>
  </div>

  <div class="field">
    <%= f.password_field :password, autocomplete: "off", placeholder: "Password (8 carácteres mínimo)", class:"form-control5" %>
  </div>

  <div class="field">
    <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "Confirmar Password", class:"form-control5" %>
  </div>
  </br>

  <div class="field">
    <p class="gris">Foto de Perfil:</p> <%= f.file_field :cover %>
  </div>

  </br>
  <div class="actions">
    <%= f.submit "Registrarse", class:"btn2 be-blue white large-padding"%>
  </div>
<% end %>
</br>
<%= render "devise/shared/links" %>
</div>
