<div style="width:90%; margin:0 auto;">

<h2>Editar <%= resource_name.to_s.humanize %></h2>
</br>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= image_tag current_user.foto_perfil.url(:normal), class:"blockquote" %>
    <%= f.file_field :foto_perfil %>
  </div>
  </br>
  
  <div class="field">
    <%= f.text_field :name_user, autofocus: true, placeholder: "Nombre de Usuario", class:"form-control5" %>
  </div>
  
  <div class="field">
    <%= f.text_field :name, autofocus: true, placeholder: "Nombres", class:"form-control5" %>
  </div>

  <div class="field">
    <%= f.text_field :last_name, autofocus: true, placeholder: "Apellidos", class:"form-control5" %>
  </div>

  <div class="field">
    <%= f.label :fecha_nacimiento, "Fecha de Nacimiento", class:"gris" %><br>
    <%= f.date_field :fecha_nacimiento, autofocus: true, placeholder: "Fecha de Nacimiento", class:"form-control5" %>
  </div>
  
  <div class="field">
    <%= f.email_field :email, autofocus: true, placeholder: "Email", class:"form-control4" %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field">
    <%= f.password_field :password, autocomplete: "off", placeholder: "Password (Déjalo en blanco si tu no quieres cambiarlo)", class:"form-control4" %>
  </div>

  <div class="field">
    <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "Confirmar password", class:"form-control4"%>
  </div>
  </br>
  <div class="field">
    <%= f.password_field :current_password, autocomplete: "off", placeholder: "Ingresa tu password actual para confirmar los cambios", class:"form-control4" %>
  </div>
  </br>
  <div class="actions">
    <%= f.submit "Actualizar", class:"btn2 be-blue white large-padding"%>
  </div>
<% end %>

</br></br>
<div>
  <div class="gris">Tipo de Usuario</div> 
  <% if user_signed_in? && current_user.is_gold_user?%>
    <span style="font-size:16px;font-family: Comic Sans MS;color:#FFDF00">Gold User</span>
    <%=image_tag "gold_user.jpg", size:"25x20"%>
  <% elsif user_signed_in? && current_user.is_normal_user?%>
    <div class="row">
      <div>
        <span style="font-size:15px;font-family: Comic Sans MS;color:#FF0080">Normal User</span>
        <%=image_tag "normal_user.png", size:"25x20"%>
      </div>
      <div class="col-md-offset-1">
        <strong><%= link_to "Ser GOLD", "/compraGold", class:"btn1 be-gold" %></strong>
      </div>
  <% end %>
</div>


</br></br>
<h3>Cancelar mi cuenta</h3>

<p>¿Insatisfecho? <%= button_to "Cancelar mi cuenta", registration_path(resource_name), data: { confirm: "¿Estás seguro?" }, method: :delete, class:"btn2 be-blue white large-padding" %></p>

<%= link_to "Atrás", :back %>
</div>
</br></br>
