<div style="width:90%; margin:0 auto;">

<h1>Lista de Favoritos</h1>
<table>
  <thead>
    <tr>
    <th><%=  "Email" %></th>  
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
   <% @users.each do |user| %>
      <tr>
          <% if not (user.is_admin? || user.id == current_user.id) %> 
            <td> <span style="font-size:16px;font-family: Comic Sans MS;color:MidnightBlue">
              <%= link_to user.email, perfil_path(user.id) %>
            </span></td>
          <% end %>
          <% if current_user.is_gold_user? || current_user.is_normal_user?  %> 
            <% if user.email != current_user.email && user.is_normal_user?%>
              <td><%= link_to 'Agregar a mis favoritos', amigos_path(:fiend_id => user), class:"blue",:method => :post %></td>
            <% end %>
          <% end %>


      </tr>
    <% end %>
  </tbody>
</table>


<br>
</div>

